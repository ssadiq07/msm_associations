<h1>Actor #<%= @actor.id %></h1>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image url</dt>
  <dd><%= @actor.image_url %></dd>

  <dt># Characters</dt>
  <dd><%= Character.where(:actor_id => @actor[:id]).count %></dd>

  <dt>Filmography</dt>
  <dd>
  <% Character.where(:actor_id => @actor.id).each do |character| %>

  <li>  <%= Movie.find_by(:id => character.movie_id).title %></li>
  <% end %>
  </dd>

  <dt>New character</dt>
  <dd>

  <%= form_tag(characters_url, method: 'post') do %>
    <div>
      <%= label_tag :movie_id %><br />
      <%= number_field_tag :movie_id %>
    </div>

    <div>
      <input type="hidden" name="actor_id" value="<%= @actor.id %>">
    </div>

    <div>
      <%= label_tag :name %><br />
      <%= text_field_tag :name %>
    </div>

    <div>
      <%= submit_tag "Create Character" %>
    </div>
  <% end %>


</dd>
</dl>
