<h1>New Character</h1>



<p><%= link_to 'Add a New Movie', new_movie_url %></p>
<p><%= link_to 'Add a New Actor', new_actor_url %></p>

<%= form_tag(characters_url, method: 'post') do %>
  <div>
    <%= label_tag :movie_id %><br />

    <%= select_tag(:movie_id,
    options_from_collection_for_select(Movie.all, :id, :title),
    :class => "form-control") %>

  </div>

  <div>
    <%= label_tag :actor_id %><br />
    <%= select_tag(:actor_id,
    options_from_collection_for_select(Actor.all, :id, :name),
    :class => "form-control") %>
  </div>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= submit_tag "Create Character" %>
  </div>
<% end %>
